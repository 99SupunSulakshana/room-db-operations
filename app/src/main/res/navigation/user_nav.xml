<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_nav"
    app:startDestination="@id/userListFragment">

    <fragment
        android:id="@+id/userListFragment"
        android:name="com.example.roomdatabaseapplication.ui.fragments.listFragment.UserListFragment"
        android:label="fragment_user_list"
        tools:layout="@layout/fragment_user_list" >
        <action
            android:id="@+id/action_userListFragment_to_addDataFragment"
            app:destination="@id/addDataFragment" />
        <action
            android:id="@+id/action_userListFragment_to_updateFragment"
            app:destination="@id/updateFragment" />
    </fragment>
    <fragment
        android:id="@+id/addDataFragment"
        android:name="com.example.roomdatabaseapplication.ui.fragments.addDataFragment.AddDataFragment"
        android:label="fragment_add_data"
        tools:layout="@layout/fragment_add_data" />
    <fragment
        android:id="@+id/updateFragment"
        android:name="com.example.roomdatabaseapplication.ui.fragments.update.UpdateFragment"
        android:label="UpdateFragment" >
        <argument
            android:name="user"
            app:argType="com.example.roomdatabaseapplication.data.model.User"
            app:nullable="true" />
    </fragment>
</navigation>